/* styles for side menu */

body{
	background: #232323;
	background-position: left;
	background-repeat: repeat-y;
	color:#fff;
	font-size: 16px;
	font-weight: bold;
}
h1 {
	border-bottom: 2px solid #d30d66;
	margin: 0;
	height: 40px;
}
h1 .hellocoton_logo {
	margin: 0;
}
a{
	color:#fff;
	line-height: 40px;
	display: block;
	position:relative; /* enhance android reactivity on tap/touchs */
}
ul.connected,
ul.disconnected{
	margin-top:15px;
}
#disconnect{
	color:#7f7f7f;
	font-size: 12px;
}
#profile{
	margin-top:20px;
}
.avatar{
	display: inline-block;
	width: 22px;
	height: 22px;
	text-align: center;
	margin-right: 5px;
	position: relative;
	top: 4px;
	overflow: visible;
}
.avatar img{
	height: 100%;
}

#featured{
	margin-top:20px;
	padding-left: 16px;
}
#featured .sidemenu_home_icon{
	position: relative;
	top: 1.5px;
}
#featured .ui_elem{
	margin-right:5px;
}

#featured, ul li{
	border-bottom:1px solid #7f7f7f;
}
ul.categories li:last-child, ul.connected li:last-child, ul.disconnected li:last-child{
	border-bottom:none;
}
a.selected,
li.selected a{
	color:#d30d66;
}

a.tapped{
	opacity: 0.5;
}

li {
padding-left: 16px;	
}

.unread{
	float: right;
	line-height: 12px;
	margin-top : 10px;
	background: rgb(78,78,78);
	color: #fff;
	padding: 4px 10px;
	-moz-border-radius: 16px;
	-webkit-border-radius: 16px;
	border-radius: 16px;
	min-width: 16px;
	font-size: 12px;
	text-align: center;
}
.unread.highlighted{
	background: #d30d66;
}