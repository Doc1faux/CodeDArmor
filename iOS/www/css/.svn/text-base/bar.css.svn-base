/* styles for header bar when done in html */

body{
	margin: 0; padding: 0;
}
#navigationBar{
	display: block;
	height: 41px;
	padding-top: 1px;
	width: 100%;
	white-space: nowrap;
}

#navigationBar{ background: url(../img/toolsbar_center_background_pattern@ldpi.png) repeat-x 0 0; -moz-background-size: 72px 68px; -webkit-background-size: 72px 68px; background-size: 72px 68px; }
@media only screen and (-webkit-min-device-pixel-ratio: 1){ #navigationBar{ background: url(../img/toolsbar_center_background_pattern@mdpi.png) repeat 0 0; -moz-background-size: 72px 68px; -webkit-background-size: 72px 68px; background-size: 72px 68px; }}
@media only screen and (-webkit-min-device-pixel-ratio: 1.3){ #navigationBar{ background: url(../img/toolsbar_center_background_pattern@hdpi.png) repeat 0 0; -moz-background-size: 72px 68px; -webkit-background-size: 72px 68px; background-size: 72px 68px; }}
@media only screen and (-webkit-min-device-pixel-ratio: 1.5){ #navigationBar{ background: url(../img/toolsbar_center_background_pattern@hdpi.png) repeat 0 0; -moz-background-size: 72px 68px; -webkit-background-size: 72px 68px; background-size: 72px 68px; }}
@media only screen and (-webkit-min-device-pixel-ratio: 2){ #navigationBar{ background: url(../img/toolsbar_center_background_pattern@2x.png) repeat 0 0; -moz-background-size: 72px 68px; -webkit-background-size: 72px 68px; background-size: 72px 68px; }}
@media only screen and (-webkit-min-device-pixel-ratio: 2.25){#navigationBar{ background: url(../img/toolsbar_center_background_pattern@xhdpi.png) repeat 0 0; -moz-background-size: 72px 68px; -webkit-background-size: 72px 68px; background-size: 72px 68px; }}


#navigationBar a{
	display: block;
	float: left;
	margin-top: 5px;
}

#navigationBar .app_pop {
	border-right: 1.5px solid #a4a4a4;
	margin: 8px 0 0 8px;
	padding: 2px 10px 0 0;
}

#navigationBar .buttons{
	float: right;
	margin: 2px 0 0 0;
}
#navigationBar .toolsbar_share_icon {
    margin-top: 1px;

}
#navigationBar .buttons a{
	width: 40px;
	text-align: center;
	line-height: 15px;
	position: relative;
	border-right: 1px solid #a4a4a4;
	padding: 0 10px;
}
#navigationBar .buttons a.share{
	border-right: none;
	padding-right: 5px;
}
#navigationBar .buttons a span.count{
	font-size: 11px;
    font-weight: bold;
    left: 34px;
    margin-top: 16px;
    position: absolute;
    text-align: left;
    width: 20px;
}
#navigationBar .categoryName{
	padding: 2px 0 0 10px;
	font-size: 16px;
	font-weight: bold;
	line-height: 38px;
	display: block;
	overflow: hidden;
	text-overflow: ellipsis;
	text-shadow: 0px 1.5px 0 #fff;
}